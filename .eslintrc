{
    "rules": {
        "indent": [
            2,
            4,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true
    },
    "globals": {
        "BEM": true,
        "BEMHTML": true,
        "block": true,
        "_": true,
        "content": true,
        "tag": true,
        "elem": true,
        "elemMods": true,
        "mix": true,
        "dataLayer": true
    },
    "extends": "eslint:recommended"
}
